<%- include("../partials/header") %>

<div class="container">
    <h2 style="text-align: center;">Update the campground !!</h2>
    <div style="width: 30%; margin: 0 auto;" >
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label>Campground Name</label>
              <input type="text" class="form-control" value="<%= campground.name %>" name="campname">
            </div>
            <div class="form-group">
              <label>Campground Image</label>
              <input type="text" class="form-control" value="<%= campground.image %>" name="campimage">
            </div>
            <div class="form-group">
                <label>Campground Description</label>
                <textarea name="campdesc" class="form-control"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Update</button>
            </div>
             <p>
                <a href="/">Go Back</a>
            </p>
            
          </form>
    </div>

</div>


<%- include("../partials/footer") %>