<%- include("../partials/header") %>

<div class="container">
    <h2 style="text-align: center;">Add a new campground !!</h2>
    <div style="width: 30%; margin: 0 auto;" >
        <form action="/campgrounds" method="POST">
            <div class="form-group">
              <label>Campground Name</label>
              <input type="text" class="form-control" placeholder="Name" name="campname">
            </div>
            <div class="form-group">
              <label>Campground Image</label>
              <input type="text" class="form-control" placeholder="Image" name="campimage">
            </div>
            <div class="form-group">
                <label>Campground Description</label>
                <input type="text" class="form-control" placeholder="Description" name="campdesc">
            </div>
            <div class="form-group">
              <label>Campground Price</label>
              <input type="number" class="form-control" placeholder="Price" name="campprice" min="0.01" step="0.01">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
             <p>
                <a href="/">Go Back</a>
            </p>
            
          </form>
    </div>

</div>


<%- include("../partials/footer") %>